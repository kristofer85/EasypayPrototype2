<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.notandi.easypayprototype.Amount"
    android:background="@drawable/radialgradientback"
    android:id="@+id/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView3"
        style="@style/productName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/user"
        android:id="@+id/lblUser"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/lblAmount" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/welcome"
        android:id="@+id/welcomeTxt"
        android:textSize="30sp"
        android:layout_below="@+id/lblUser"
        android:layout_alignEnd="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title_activity_amount"
        android:id="@+id/lblAmount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/textView3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:ems="10"
        android:id="@+id/txtAmount"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:layout_below="@+id/lblAmount"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:editable="false"
        android:enabled="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accept"
        android:id="@+id/btnConfirm"
        android:visibility="invisible"
        android:background="#888888"
        android:layout_below="@+id/btn0"
        android:layout_alignStart="@+id/textView3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seven"
        android:id="@+id/btn7"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/txtAmount"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/eight"
        android:id="@+id/btn8"
        android:layout_alignTop="@+id/btn7"
        android:layout_alignStart="@+id/txtAmount"
        android:layout_toStartOf="@+id/lblAmount"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/four"
        android:id="@+id/btn4"
        android:layout_below="@+id/btn7"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btn7"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/one"
        android:id="@+id/btn1"
        android:layout_below="@+id/btn4"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btn4"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zero"
        android:id="@+id/btn0"
        android:layout_below="@+id/btn1"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btn2"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/five"
        android:id="@+id/btn5"
        android:layout_alignTop="@+id/btn4"
        android:layout_alignEnd="@+id/btn8"
        android:layout_alignStart="@+id/btn8"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/two"
        android:id="@+id/btn2"
        android:layout_alignTop="@+id/btn1"
        android:layout_alignEnd="@+id/btn5"
        android:layout_alignStart="@+id/btn5"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nine"
        android:id="@+id/btn9"
        android:layout_alignTop="@+id/btn8"
        android:layout_alignStart="@+id/lblAmount"
        android:layout_alignEnd="@+id/btnConfirm"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/six"
        android:id="@+id/btn6"
        android:layout_alignTop="@+id/btn5"
        android:layout_alignEnd="@+id/btn9"
        android:layout_alignStart="@+id/btn9"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/three"
        android:id="@+id/btn3"
        android:layout_alignTop="@+id/btn2"
        android:layout_alignStart="@+id/btn6"
        android:layout_alignEnd="@+id/btn6"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/neg"
        android:id="@+id/btnNeg"
        android:layout_alignTop="@+id/btn0"
        android:layout_alignStart="@+id/btn3"
        android:layout_alignEnd="@+id/btn3"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/plus"
        android:id="@+id/btnPlus"
        android:layout_alignTop="@+id/btn9"
        android:layout_alignEnd="@id/textView3"
        android:layout_toEndOf="@+id/btn9"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/minus"
        android:id="@+id/btnMinus"
        android:layout_alignTop="@+id/btn6"
        android:layout_alignEnd="@+id/btnPlus"
        android:layout_toEndOf="@+id/btn6"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mul"
        android:id="@+id/btnMult"
        android:layout_alignTop="@+id/btn3"
        android:layout_alignEnd="@+id/btnMinus"
        android:layout_toEndOf="@+id/btn3"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/div"
        android:id="@+id/btnDiv"
        android:visibility="invisible"
        android:layout_alignTop="@+id/btnNeg"
        android:layout_alignEnd="@+id/btnMult"
        android:layout_toEndOf="@+id/btnNeg" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/c"
        android:id="@+id/btnC"
        android:visibility="invisible"
        android:layout_alignTop="@+id/btnPlus"
        android:layout_toEndOf="@+id/btnPlus" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/del"
        android:id="@+id/btnDel"
        android:layout_alignTop="@+id/btnMinus"
        android:layout_alignStart="@+id/btnC"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/eq"
        android:id="@+id/btnEquals"
        android:textSize="30sp"
        android:visibility="invisible"
        android:layout_alignTop="@+id/btnMult"
        android:layout_alignStart="@+id/btnDel" />

</RelativeLayout>
