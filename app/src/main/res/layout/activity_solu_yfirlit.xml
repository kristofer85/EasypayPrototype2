<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.notandi.easypayprototype.SoluYfirlit"
    android:id="@+id/backgroundsoluyfirlit"
    android:background="@drawable/radialgradientback">

    <TextView
        android:id="@+id/textViewSoluYfirlit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Product_Name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        style="@style/productName" />

    <TextView
        android:id="@+id/textViewFyrirtSolYfirlt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/user"
        android:textColor="#000000"
        android:layout_below="@+id/textViewSoluYfirlit"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Færsl Nr"
        android:textSize="10sp"
        android:id="@+id/textViewFnrSolu"
        android:layout_below="@+id/textViewFyrirtSolYfirlt"
        android:layout_marginTop="47dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fyrirtæki"
        android:textSize="10sp"
        android:id="@+id/textViewFtSolu"
        android:layout_marginLeft="17dp"
        android:layout_alignTop="@+id/textViewFnrSolu"
        android:layout_toEndOf="@+id/textViewFnrSolu"
        android:layout_marginStart="34dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Dagsetning"
        android:textSize="10sp"
        android:id="@+id/textViewDagSolu"
        android:layout_alignTop="@+id/textViewFnrSolu"
        android:layout_toEndOf="@+id/textViewFtSolu"
        android:layout_marginStart="54dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Upphæð"
        android:textSize="10sp"
        android:id="@+id/textViewUpphSolu"
        android:layout_marginStart="34dp"
        android:layout_toEndOf="@+id/textViewDagSolu"
        android:layout_alignTop="@+id/textViewFnrSolu" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
        android:layout_alignParentEnd="true"
        android:weightSum="1">

        <GridView
            android:id="@+id/faerslur"
            android:layout_width="348dp"
            android:layout_height="250dp"
            android:numColumns="1"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:stretchMode="columnWidth"
            android:drawSelectorOnTop="false"
            android:listSelector="@drawable/list_selector"
            android:layout_marginTop="150dp"
            android:layout_weight="0.26" />

    </LinearLayout>

</RelativeLayout>
