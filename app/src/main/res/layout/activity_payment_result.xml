<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.notandi.easypayprototype.PaymentResult"
    android:background="@drawable/radialgradientback"
    android:id="@+id/PaymentResult">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/productName"
        android:id="@+id/textView17"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info_rvk"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_below="@+id/lblBusinessAddress"
        android:layout_alignParentStart="true"
        android:id="@+id/textView12"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info_visa"
        android:textColor="#000000"
        android:textSize="30sp"
        android:id="@+id/textView2"
        android:textIsSelectable="false"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info_valitor"
        android:textColor="#000000"
        android:textSize="20sp"
        android:id="@+id/lblAmount"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info_time_stamp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/lblDate"
        android:layout_alignStart="@+id/textView18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView18"
        android:layout_below="@+id/textView17"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirmed"
        android:textSize="30sp"
        android:id="@+id/lblPaymentRecived"
        android:layout_below="@+id/textView18"
        style="@style/PaymentResult"
        android:gravity="center"
        android:background="#ff37a829"
        android:textColor="#ff232323" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/lblBusinessName"
        android:layout_below="@+id/lblPaymentRecived"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/info_adress"
        android:id="@+id/lblBusinessAddress"
        android:layout_below="@+id/lblBusinessName"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/amount"
        android:id="@+id/lblChargedAmount"
        android:textSize="35sp"
        android:layout_above="@+id/textView22"
        android:layout_alignStart="@+id/lblDate"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/is_receipt"
        android:id="@+id/textView22"
        android:layout_marginBottom="37dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/textView17" />

    <Button
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:text="@string/no"
        android:id="@+id/btnReceiptNo"
        android:textSize="30sp"
        android:layout_alignTop="@+id/btnReceiptYes"
        android:layout_toEndOf="@+id/textView17"
        android:layout_marginBottom="20dp"
        android:background="@drawable/graybuttonbackground"
        android:layout_marginLeft="-15dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="@string/yes"
        android:id="@+id/btnReceiptYes"
        android:textSize="30sp"
        android:background="@drawable/graybuttonbackground"
        android:layout_below="@+id/lblChargedAmount"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="-20dp"
        android:layout_marginRight="-10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/info_date"
        android:id="@+id/lblDate"
        android:textSize="20sp"
        android:layout_below="@+id/lblAmount"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView6"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/lblBusinessName"
        android:layout_alignParentStart="true"
        android:textSize="20sp" />

</RelativeLayout>
