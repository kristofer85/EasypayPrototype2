<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.notandi.easypayprototype.Receipt"
    android:background="@drawable/radialgradientback"
    android:id="@+id/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView23"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        style="@style/productName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView24"
        android:layout_below="@+id/textView23"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/phone"
        android:id="@+id/lblPhone"
        android:visibility="visible"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_below="@+id/addProductUser"
        android:layout_alignStart="@+id/addProductUser"
        android:layout_marginTop="5dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/txtEmail"
        android:background="#FFFFFF"
        android:visibility="visible"
        android:layout_below="@+id/lblEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:imeOptions="actionDone"
        android:hint=" johndoe@email.com" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/accept"
        android:id="@+id/btnSendSMS"
        android:visibility="visible"
        android:background="@drawable/buttonbackground"
        android:textSize="20sp"
        android:layout_below="@+id/txtPhone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_lbl"
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/lblEmail"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_alignEnd="@+id/txtEmail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sms_lbl"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/addProductUser"
        android:layout_below="@+id/btnSendEmail"
        android:layout_alignStart="@+id/txtPhone"
        android:layout_alignEnd="@+id/txtPhone"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/enter_email"
        android:id="@+id/lblEmail"
        android:visibility="visible"
        android:layout_marginTop="53dp"
        android:textSize="20sp"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/txtEmail"
        android:textColor="#000000" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtPhone"
        android:background="#FFFFFF"
        android:visibility="visible"
        android:hint=" 6991234"
        android:layout_marginTop="85dp"
        android:layout_below="@+id/btnSendEmail"
        android:layout_alignStart="@+id/txtEmail"
        android:textColor="#000000" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/accept"
        android:id="@+id/btnSendEmail"
        android:visibility="visible"
        android:background="@drawable/buttonbackground"
        android:textSize="20sp"
        android:layout_below="@+id/txtEmail"
        android:layout_alignStart="@+id/btnSendSMS"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/user"
        android:id="@+id/textView8"
        android:textColor="#000000"
        android:layout_below="@+id/textView23"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textSize="30sp" />
</RelativeLayout>
