<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/add_product"
    android:background="@drawable/radialgradientback">

    <TextView
        style="@style/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView19"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/user"
        android:id="@+id/addProductUser"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_below="@+id/textView19"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:layout_alignParentEnd="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/product_name"
        android:id="@+id/productName"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView26"
        android:layout_alignStart="@+id/txtProductName" />

    <EditText
        android:layout_width="300sp"
        android:layout_height="40sp"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/txtProductName"
        android:background="#FFFFFF"
        android:gravity="center"
        android:layout_below="@+id/productName"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/product_price"
        android:id="@+id/productPrice"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/txtProductName"
        android:layout_alignLeft="@+id/txtProductName" />

    <EditText
        android:layout_width="300sp"
        android:layout_height="40sp"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/txtProductPrice"
        android:background="#FFFFFF"
        android:layout_below="@+id/productPrice"
        android:layout_alignLeft="@+id/productPrice" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/add_product"
        android:id="@+id/textView26"
        android:textSize="30sp"
        android:layout_below="@+id/addProductUser"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/btnMakeProduct"
        android:visibility="visible"
        android:background="@drawable/buttonbackground"
        android:textSize="20sp"
        android:text="@string/finish"
        android:layout_below="@+id/txtProductPrice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />
</RelativeLayout>