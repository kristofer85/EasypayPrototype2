<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Bakfaersla"
    android:id="@+id/backgroundbakfaersla"
    android:background="@drawable/radialgradientback">
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
        android:weightSum="1"
        android:layout_alignParentEnd="true">

        <GridView
            android:id="@+id/faerslur2"
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:numColumns="1"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:stretchMode="columnWidth"
            android:drawSelectorOnTop="false"
            android:listSelector="@drawable/list_selector"
            android:layout_marginTop="180dp"
            android:layout_weight="0.26"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textViewEasyPayBakfaersla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/Product_Name"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            style="@style/productName" />

        <TextView
            android:id="@+id/textViewFyrirtBakfaersla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/user"
            android:textColor="#000000"
            android:layout_below="@+id/textViewEasyPayBakfaersla"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Færsl Nr"
            android:textSize="11sp"
            android:textColor="#000000"
            android:id="@+id/textView4"
            android:layout_below="@+id/textViewFyrirtBakfaersla"
            android:layout_marginTop="60dp"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Fyrirtæki"
            android:textSize="11sp"
            android:textColor="#000000"
            android:id="@+id/textView13"
            android:layout_marginLeft="17dp"
            android:layout_alignTop="@+id/textView4"
            android:layout_toEndOf="@+id/textView4"
            android:layout_marginStart="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Dagsetning"
            android:textSize="11sp"
            android:textColor="#000000"
            android:id="@+id/textView16"
            android:layout_alignTop="@+id/textView4"
            android:layout_toEndOf="@+id/textView13"
            android:layout_marginStart="26dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Upphæð"
            android:textColor="#000000"
            android:textSize="11sp"
            android:id="@+id/textView20"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/textView16"
            android:layout_alignTop="@+id/textView4" />

    </RelativeLayout>

</RelativeLayout>
