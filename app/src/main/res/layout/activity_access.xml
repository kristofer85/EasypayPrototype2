<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Access"
    android:id="@+id/background"
    android:background="@drawable/radialgradientback">
<!--fanney!-->
    <TextView android:text="@string/lbl_access" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblAccess"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_marginTop="112dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Product_Name"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        style="@style/productName" />

    <EditText
        android:layout_width="300sp"
        android:layout_height="40sp"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/txtAccess"
        android:layout_below="@+id/lblAccess"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:layout_marginTop="30sp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/btnConfirm"
        android:visibility="visible"
        android:background="@drawable/buttonbackground"
        android:textSize="20sp"
        android:text="@string/accept"
        android:layout_below="@+id/txtAccess"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/lblWrongAccess"
        android:layout_above="@+id/lblAccess"
        android:layout_centerHorizontal="true"
        android:textColor="#FF0000" />

</RelativeLayout>
